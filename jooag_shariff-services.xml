<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="section1" label="General">
		<field name="services" type="list" class="advancedSelect" label="Select a Service" multiple="false">
			<option value="">Please s a service</option>

			<option value="Facebook">Facebook</option>
			<option value="Twitter">Twitter</option>
			<option value="GooglePlus">GooglePlus</option>
			<option value="LinkedIn">LinkedIn</option>
			<option value="Pinterest">Pinterest</option>
			<option value="Xing">Xing</option>
			<option value="Whatsapp">Whatsapp</option>
			<option value="Mail">Mail</option>
			<option value="Info">Info</option>
			<option value="AddThis.counter">AddThis</option>
			<option value="Tumblr">Tumblr</option>
			<option value="Flattr">Flattr</option>
			<option value="Diaspora">Diaspora</option>
			<option value="Reddit">Reddit</option>
			<option value="StumbleUpon">StumbleUpon</option>
			<option value="Threema">Threema</option>
			<option value="Weibo">Weibo</option>
			<option value="Tencent-weibo">Tencent-weibo</option>
			<option value="Qzone">Qzone</option>
		</field>
	</fieldset>
	
	<fieldset name="section2" label="General">
		<field name="twitter_via" class="advancedSelect" showon="services:Twitter" type="input" label="PLG_JOOAG_SHARIFF_TWITTER_VIA"/>
		
		<field name="fb_secret" showon="services:Facebook" type="input" label="PLG_JOOAG_SHARIFF_FACEBOOK_SECRET"/>
		<field name="fb_app_id" showon="services:Facebook" type="input" label="PLG_JOOAG_SHARIFF_FACEBOOK_APP_ID"/>
		<field name="spacer_LABEL_FB_API" type="spacer" showon="services:Facebook" label="PLG_JOOAG_SHARIFF_FACEBOOK_API_DESC" class="alert alert-info" />
		
		<field name="data_mail_url" showon="services:Mail" type="input" label="PLG_JOOAG_SHARIFF_MAIL_URL" />
		<field name="data_mail_subject" showon="services:Mail" type="input" label="PLG_JOOAG_SHARIFF_MAIL_SUBJECT" />
		<field name="data_mail_body" showon="services:Mail" type="input" label="PLG_JOOAG_SHARIFF_MAIL_BODY" />
		<field type="spacer" showon="services:Mail" name="data-mail-spacer" label="PLG_JOOAG_SHARIFF_MAIL_DESC" class="alert alert-error" />
		
		<field name="data_info_url" showon="services:Info" type="modal_article" label="PLG_JOOAG_SHARIFF_INFO_BUTTON_ARTICLE"/>
		<field type="spacer" showon="services:Info" name="spacer_LABEL_INFO_BUTTON" label="PLG_JOOAG_SHARIFF_INFO_DESC"  class="alert alert-info" />
		
		<field name="flattr_category" showon="services:Flattr" type="input" label="PLG_JOOAG_SHARIFF_FLATTR_CATEGORY"/>
		<field name="flattr_user" showon="services:Flattr" type="input" label="PLG_JOOAG_SHARIFF_FLATTR_USER"/>		
	</fieldset>
</form>